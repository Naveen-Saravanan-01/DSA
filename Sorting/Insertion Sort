

class Solution {
    // Please change the array in-place
    public void insertionSort(int arr[]) {
        // code here
        
        int key,j=0;
        
        for(int i=1;i<arr.length;i++){
            key=arr[i];
            j=i-1;
            
            while(j>=0 && arr[j]>key){
                
                arr[j+1]=arr[j];
                j--;
            }
            
            arr[j+1]=key;
            
            
        }
    }
}
